<table class="table table-striped table-sm">
  <thead class="thead-inverse">
    <tr>
      {{!-- <th>#</th> --}}
      <th>Category Name</th>
      <th>Active</th>
    </tr>
  </thead>
  <tbody>
		{{#each data}}
    <tr>
      {{!-- <th scope="row">{{this.id}}</th> --}}
      <td>
				<a class="edit-category" data-toggle="modal" data-target="#editFormModal"
					data-id="{{id}}"
					data-name="{{name}}"
					data-active="{{active}}">
					{{!-- <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> --}}
				{{this.name}}
				</a>
			</td>
      <td>
				{{this.active}}
				<a href="#">
          <span class="glyphicon glyphicon-ok"></span>
        </a>
			</td>
    </tr>
		{{/each}}
  </tbody>
</table>

<nav aria-label="Page navigation example">
  <ul class="pagination">
		{{#if paginate.previous}}
		 	<li class="page-item">
		{{else}}
			<li class="page-item disabled">
		{{/if}}
				<a class="page-link" href="/category?page={{paginate.first}}&limit={{paginate.limit}}&order=ASC" aria-label="Previous">
					<span aria-hidden="true">&laquo;</span>
					<span class="sr-only">Previous</span>
				</a>
			</li>
		{{#if paginate.previous}}
    	<li class="page-item"><a class="page-link" href="/category?page={{paginate.previous}}&limit={{paginate.limit}}&order=ASC">{{paginate.previous}}</a></li>
		{{/if}}
		<li class="page-item disabled"><a class="page-link" href="/category?page={{paginate.active}}&limit={{paginate.limit}}&order=ASC">{{paginate.active}}</a></li>
		{{#if paginate.next}}
			<li class="page-item"><a class="page-link" href="/category?page={{paginate.next}}&limit={{paginate.limit}}&order=ASC">{{paginate.next}}</a></li>
		{{/if}}
    {{!-- <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li> --}}
		{{#if paginate.next}}
			<li class="page-item">
		{{else}}
			<li class="page-item disabled">
		{{/if}}
      <a class="page-link" href="/category?page={{paginate.last}}&limit={{paginate.limit}}&order=ASC" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>

<!-- Add Form Modal -->
<div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<form method="post" action="/category">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Add Category</h4>
				</div>
				<div class="modal-body">
					<div class="form-group">
						<label>Category Name</label>
						<input type="text" name="name" class="form-control"/>
					</div>
					<div class="form-group">
						<div class="checkbox">
								<label><input type="checkbox" name="active"> Active</label>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<!-- <button type="button" class="btn btn-primary">Save changes</button> -->
					<input type="submit" class="btn btn-primary" value="Save category">
				</div>
			</form>
		</div>
	</div>
</div>

<!-- Edit Form Modal -->
<div class="modal fade" id="editFormModal" tabindex="-1" role="dialog" aria-labelledby="editFormModalLabel">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<form class="editformmodal" method="post" action="category/edit">
				<input type="hidden" id="edit-form-id" name="id">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title" id="myModalLabel">Edit Category</h4>
				</div>
				<div class="modal-body">
					<div class="form-group">
						<label>Category Name</label>
						<input type="text" name="name" id="edit-form-name" class="form-control"/>
					</div>
					<div class="form-group">
						<div class="checkbox">
								<label><input type="checkbox" id="edit-form-active" name="active" value="1"> Active</label>
						</div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<!-- <button type="button" class="btn btn-primary">Save changes</button> -->
					<input type="submit" class="btn btn-primary" value="Save changes">
				</div>
			</form>
		</div>
	</div>
</div>

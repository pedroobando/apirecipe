<table class="table table-striped table-sm">
  <thead class="thead-inverse">
    <tr>
      {{!-- <th>#</th> --}}
      <th>Category Name</th>
      <th>Active</th>
    </tr>
  </thead>
  <tbody>
		{{#each data}}
    <tr>
      {{!-- <th scope="row">{{this.id}}</th> --}}
      <td>{{this.name}}</td>
      <td>{{this.active}}</td>
    </tr>
		{{/each}}
  </tbody>
</table>

<nav aria-label="Page navigation example">
  <ul class="pagination">
		{{#if paginate.previous}}
		 	<li class="page-item">
		{{else}}
			<li class="page-item disabled">
		{{/if}}
				<a class="page-link" href="/category?page={{paginate.first}}&limit={{paginate.limit}}&order=ASC" aria-label="Previous">
					<span aria-hidden="true">&laquo;</span>
					<span class="sr-only">Previous</span>
				</a>
			</li>

    <li class="page-item"><a class="page-link" href="/category?page={{paginate.previous}}&limit={{paginate.limit}}&order=ASC">{{paginate.previous}}</a></li>
		<li class="page-item disabled"><a class="page-link" href="/category?page={{paginate.active}}&limit={{paginate.limit}}&order=ASC">{{paginate.active}}</a></li>
		<li class="page-item"><a class="page-link" href="/category?page={{paginate.next}}&limit={{paginate.limit}}&order=ASC">{{paginate.next}}</a></li>
    {{!-- <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li> --}}
		{{#if paginate.next}}
			<li class="page-item">
		{{else}}
			<li class="page-item disabled">
		{{/if}}
      <a class="page-link" href="/category?page={{paginate.last}}&limit={{paginate.limit}}&order=ASC" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>
</nav>
